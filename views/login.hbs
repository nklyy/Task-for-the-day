<div class="row z-depth-2">
  <h1 class="center"><i for="name" class="iconLog material-icons">exit_to_app</i>Вход</h1>
  {{> messages}}
  <form action="/login" method="POST">
    <div class="row">
      <div class="input-field col s12 m4 l6 offset-l3 center">
        <i class="material-icons prefix">email</i>
        <input id="icon_telephone" type="email" class="validate" name="email" required>
        <label for="icon_telephone">Email</label>

        <div class="input-field">
          <i class="material-icons prefix">lock</i>
          <input id="icon_telephone" type="password" class="validate" name="password" required>
          <label for="icon_telephone">Password</label>
        </div>
        <button class="btn btn-small waves-effect red lighten-2">Войти</button>
        <a href="/register" class="btn btn-small waves-effect red lighten-2">Зарегистрироваться</a>
        <p>No Account? <a href="/register">Register</a></p>
      </div>
    </div>
  </form>
</div>